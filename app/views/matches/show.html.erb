
<div id="matchShow">
  <article class="three_fourth">
    <div id="match"></div>
  </article>
  <article class="one_fourth">
    <div class="matchUp">
      <%= current_user.username %> <br> vs <br> Tyrion <br>
    </div>
    <div class="unitStats">

      <div class="nameOfSelectedUnit hideSelectedUnitInfo">
        <h3 id="selectUnitName">Crossbowman</h3>
      </div>


      <article class="selectUnitImage hideSelectedUnitInfo">
        <%= image_tag "elephant.svg", :class => "selectedUnitImage", :id => 'selectedUnitImage' %>
      </article>

      <article class="selectUnitStats hideSelectedUnitInfo">

        <div id="selectUnitClass" class="selectUnitStat">
          <h5 class="key">Class</h5>
          <hr>
          <h6 class="value">5</h6>
        </div>

        <div id="selectUnitStrength" class="selectUnitStat">
          <p class="key">Strength</p>
          <hr>
          <h6 class="value">5</h6>
        </div>

        <div id="selectUnitMoveRange" class="selectUnitStat">

          <p class="key">Movement</p>
          <hr>
          <h6 class="value">5</h6>
        </div>

        <div id="selectUnitUtility" class="selectUnitStat">
          <p class="key">Flank</p>
          <hr>
          <h6 class="value">5</h6>
        </div>

        <div id="selectUnitTrump" class="selectUnitStat">
          <p class="key">Trump</p>
          <hr>
          <article class="value"></article>
        </div>


      </article>


    </div>
    <div class="toggleOptions">
      <h4>Toggle</h4>
      <button>button 1</button>
      <button>button 2</button>
    </div>

  </article>
</div>
<div id=metaInfo>
  <article class="one_fourth">
    <a id="currentUserID"><%=current_user.id %></a>
    <a id="homeID"><%=@match.home_user_id %></a>
    <a id="awayID"><%=@match.away_user_id %></a>

    <a id="homeReady"><%=@match.home_ready %></a>
    <a id="awayReady"><%=@match.away_ready %></a>


    <a id="matchID"><%=@match.id %></a>
    <a id="matchTurn"><%=@match.turn %></a>
    <a id="matchWhosTurn"><%=@match.whos_turn %></a>
    <a id="matchAgainst"><%=@match.match_against %></a>
    <a id="matchWhoStarted"><%=@match.who_started %></a>
    <a id="matchStatus"><%= @match.match_status %></a>
  </article>
  <article class="full_column">
    <a id="homeUnitsPos"><%= @match.home_units_position %></a>
    <a id="awayUnitsPos"><%= @match.away_units_position %></a>
  </article>
</div>


