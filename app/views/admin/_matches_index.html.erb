<h1>Listing matches</h1>

<table>

  <thead>
  <tr>
    <th>ID</th>
    <th>Turn</th>
    <th>Link</th>
    <th>Team 1</th>
    <th>Team 0</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  </thead>

  <tbody>
  <hr><hr><hr>
In Progress
  <hr><hr>

  <% @in_progress_matches.each do |match| %>
      <tr>
        <%= render :partial => 'admin/match_list_item', :locals => {:match => match} %>
      </tr>
  <% end %>


  <hr><hr><hr>
New Matches
  <hr><hr>
  <% @new_matches.each do |match| %>
      <tr>
        <%= render :partial => 'admin/match_list_item', :locals => {:match => match} %>
      </tr>
  <% end %>


  <hr><hr><hr>
  Finished Matches
  <hr><hr>

  <% @finished_matches.each do |match| %>
      <tr>
        <%= render :partial => 'admin/match_list_item', :locals => {:match => match} %>
      </tr>
  <% end %>


  <hr><hr><hr>
  Pending Matches
  <hr><hr>

  <% @pending_matches.each do |match| %>
      <tr>
        <%= render :partial => 'admin/match_list_item', :locals => {:match => match} %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_match_path %>
<div>
  <%= link_to "Matches", matches_path, class: 'options' %>
  <br>
</div>