            eventCollection: "sign_ups"
        });
        client.draw(gamesFinishedPerWeek, document.getElementById("gamesFinishedPerWeek"), {
            chartType: "columnchart",
            title: "Games Finished/Day",
            colors: ["#666"],
            width: "auto"
        });

    });

});